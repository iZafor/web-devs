<%- include("header"); -%>
<div class="box" id="heading">
  <h1 id="heading"><%= listTitle %></h1>
</div>
<div class="box">
  <% for(let item of listItems) {%>
  <div class="item">
    <input type="checkbox" />
    <p><%= item %></p>
  </div>
  <% } %>
  <form class="item" action=<%= postRoute %>
    method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
      autofocus
    />
    <button type="submit" name="button" value="add">+</button>
    <button type="submit" name="button" value="reset">Reset</button>
  </form>
</div>
<%- include("footer"); -%>
